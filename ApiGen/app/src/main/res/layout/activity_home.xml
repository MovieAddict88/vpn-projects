<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:id="@+id/activityhomeLinearLayout1">


		
		<androidx.cardview.widget.CardView
			android:id="@+id/homeCardView1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			app:cardCornerRadius="2.0dip"
			app:cardElevation="2.0dip"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp">

			<LinearLayout
				android:orientation="vertical"
				android:padding="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Servers"/>

				<Spinner
					android:id="@+id/serverList"
					android:background="@drawable/button_bg"
					android:layout_width="match_parent"
					android:layout_height="50dp"/>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<Button
						android:onClick="add"
						android:layout_width="100dp"
						android:layout_height="48dp"
						android:layout_weight="1"
						android:fontFamily="sans-serif-smallcaps"
						style="@style/Widget.AppCompat.Button.Colored"
						android:text="Add"
					/>

					<Button
						android:layout_width="100dp"
						android:layout_height="48dp"
						android:text="Edit"
						android:fontFamily="sans-serif-smallcaps"
						android:layout_weight="1"
						style="@style/Widget.AppCompat.Button.Colored"
						android:onClick="edit"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"/>

					<Button
						android:id="@+id/removeServer"
						android:layout_width="100dp"
						android:layout_height="48dp"
						android:text="Remove"
						android:fontFamily="sans-serif-smallcaps"
						android:layout_weight="1"
						style="@style/Widget.AppCompat.Button.Colored"
						android:onClick="del"
					/>

				</LinearLayout>

			</LinearLayout>

		</androidx.cardview.widget.CardView>
		
		<androidx.cardview.widget.CardView
			android:id="@+id/homeCardView1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			app:cardCornerRadius="2.0dip"
			app:cardElevation="2.0dip"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp">

			<LinearLayout
				android:orientation="vertical"
				android:padding="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Networks"/>

				<Spinner
					android:id="@+id/payloadList"
					android:background="@drawable/button_bg"
					android:layout_width="match_parent"
					android:layout_height="50dp"/>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<Button
						android:onClick="addPayload"
						android:layout_width="100dp"
						android:layout_height="48dp"
						android:layout_weight="1"
						android:fontFamily="sans-serif-smallcaps"
						style="@style/Widget.AppCompat.Button.Colored"
						android:text="Add"
					/>

					<Button
						android:layout_width="100dp"
						android:layout_height="48dp"
						android:text="Edit"
						android:fontFamily="sans-serif-smallcaps"
						android:layout_weight="1"
						style="@style/Widget.AppCompat.Button.Colored"
						android:onClick="editPayload"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"/>

					<Button
						android:id="@+id/removeServer"
						android:layout_width="100dp"
						android:layout_height="48dp"
						android:text="Remove"
						android:fontFamily="sans-serif-smallcaps"
						android:layout_weight="1"
						style="@style/Widget.AppCompat.Button.Colored"
						android:onClick="deletePayload"
					/>

				</LinearLayout>

			</LinearLayout>

		</androidx.cardview.widget.CardView>
			

		
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp">

		</LinearLayout>

		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView
				android:id="@+id/json"
				android:textIsSelectable="true"
				android:typeface="normal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="10sp"/>

		</ScrollView>

	</LinearLayout>

</FrameLayout>

