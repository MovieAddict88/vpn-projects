<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Payload"
			android:padding="10dp"
			android:background="@color/colorPrimary"
			android:textColor="#FFFFFFFF"/>

		<com.google.android.material.textfield.TextInputLayout
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:hint="Name">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:id="@+id/pName"
				android:layout_height="wrap_content"/>

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.textfield.TextInputLayout
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:hint="Payload"
			android:id="@+id/spy">
			

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:id="@+id/cPayload"
				android:layout_height="wrap_content"/>

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.textfield.TextInputLayout
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:hint="SNI ex: (m.facebook.com"
			android:id="@+id/spi">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:id="@+id/sni"
				android:layout_height="wrap_content"/>

		</com.google.android.material.textfield.TextInputLayout>

		
		
		<LinearLayout
			android:id="@+id/slowsettings"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<com.google.android.material.textfield.TextInputLayout
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:hint="SlowDNS">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:id="@+id/dns"
					android:layout_height="wrap_content"/>

			</com.google.android.material.textfield.TextInputLayout>

		</LinearLayout>
		
		<CheckBox
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Use Default Proxy "
			android:id="@+id/useWeb"/>

		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:id="@+id/websettings"
			android:layout_height="wrap_content">

			<com.google.android.material.textfield.TextInputLayout
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:hint="Proxy Host">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:id="@+id/pstt"
					android:layout_height="wrap_content"/>

			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:hint="Proxy Port">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:id="@+id/prtt"
					android:layout_height="wrap_content"/>

			</com.google.android.material.textfield.TextInputLayout>

		</LinearLayout>
		
		

		<AutoCompleteTextView
			android:layout_width="match_parent"
			android:inputType="text"
			android:layout_height="wrap_content"
			android:ems="10"
			android:id="@+id/pInfo"
			android:hint="Payload Info"/>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_height="wrap_content">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:paddingTop="10dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="TunnelTypes"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center"/>

			</LinearLayout>

		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center">

			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/useInject"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="SSH/PROXY"
				android:layout_toRightOf="@id/useInject"
				android:id="@+id/heh"
				android:layout_centerInParent="true"
				android:textSize="10sp"/>

			<RadioButton
				android:layout_toRightOf="@id/heh"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/useSSL"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="SSH/SSL"
				android:layout_toRightOf="@id/useSSL"
				android:layout_centerInParent="true"
				android:id="@+id/pak"
				android:textSize="10sp"/>

			<RadioButton
				android:layout_width="wrap_content"
				android:layout_toRightOf="@id/pak"
				android:layout_height="wrap_content"
				android:id="@+id/useWSpayload"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="SSL/PAYLOAD"
				android:layout_toRightOf="@id/useWSpayload"
				android:layout_centerInParent="true"
				android:id="@+id/pak1"
				android:textSize="10sp"/>

			<RadioButton
				android:layout_width="wrap_content"
				android:layout_toRightOf="@id/pak1"
				android:layout_height="wrap_content"
				android:id="@+id/useDirect"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="DIRECT"
				android:layout_toRightOf="@id/useDirect"
				android:layout_centerInParent="true"
				android:id="@+id/pak2"
				android:textSize="10sp"/>
		</RelativeLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/useHatok"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Ssl+RP"
				android:layout_centerInParent="true"
				android:textSize="10sp"/>
			
			
			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/useSlow"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Slow dns"
				android:layout_centerInParent="true"
				android:textSize="10sp"/>
			
		</LinearLayout>

		<com.google.android.material.button.MaterialButton
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginVertical="5dp"
			android:text="Generate"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:id="@+id/generate"
			android:textColor="#ffffff"
			android:theme="@style/MatButtonSourceCode"
			app:cornerRadius="20dp"/>

	</LinearLayout>

</ScrollView>

