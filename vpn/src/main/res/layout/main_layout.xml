<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    
	<androidx.core.widget.NestedScrollView 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:fillViewport="true">
        
	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/activity_mainLinearLayout"
		android:padding="2.0dip"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<androidx.cardview.widget.CardView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5.0dip"
			app:cardCornerRadius="16.0dip"
			app:cardElevation="2.0dip"
			app:cardUseCompatPadding="true">

			<LinearLayout
				android:orientation="vertical"
				android:padding="5.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
                
                <com.google.android.material.textview.MaterialTextView
						android:id="@+id/tb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:textSize="12.0dip"
                        android:textColor="@color/colorOpposite"
                        android:layout_marginTop="10.0dip"
						android:text="Servers •"/>
						

                  <LinearLayout
					android:orientation="vertical"
					android:background="@drawable/box_bg"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginTop="3.0dip"
					android:layout_marginRight="9.0dip">

					<LinearLayout
						android:orientation="vertical"
						android:layout_width="fill_parent"
						android:layout_height="55.0dip">

						<LinearLayout
							android:gravity="center|left"
							android:orientation="horizontal"
							android:id="@+id/mainviewCardView1"
                            android:background="?selectableItemBackground"
							android:layout_width="fill_parent"
							android:layout_height="55.0dip">

				 	<androidx.appcompat.widget.AppCompatSpinner
							android:scrollbars="none"
							android:background="@android:color/transparent"
							android:layout_width="match_parent"
							android:dropDownWidth="fill_parent"
							android:layout_height="55dip"
							android:id="@+id/serverSpinner"/>

						</LinearLayout>

					</LinearLayout>
                    	</LinearLayout>

                <com.google.android.material.textview.MaterialTextView
						android:id="@+id/ta"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="24.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:textSize="12.0dip"
                        android:textColor="@color/colorOpposite"
						android:text="Tweaks •"/>
                    
                       <LinearLayout
					android:orientation="vertical"
                    android:layout_marginTop="3.0dip"
					android:background="@drawable/box_bg"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
					android:layout_marginRight="9.0dip">

					<LinearLayout
						android:orientation="vertical"
						android:layout_width="fill_parent"
						android:layout_height="55.0dip">

						<LinearLayout
							android:gravity="center|left"
							android:orientation="horizontal"
							android:background="?selectableItemBackground"
							android:id="@+id/mainviewCardView2"
							android:layout_width="fill_parent"
							android:layout_height="55.0dip">

						
						<androidx.appcompat.widget.AppCompatSpinner
							android:scrollbars="none"
							android:background="@android:color/transparent"
							android:layout_width="match_parent"
							android:dropDownWidth="fill_parent"
							android:layout_height="55dip"
							android:id="@+id/payloadSpinner"/>


						</LinearLayout>

					</LinearLayout>

				</LinearLayout>
                
          	
	<LinearLayout
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp">

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center_horizontal">

                
                                <com.google.android.material.textview.MaterialTextView
						android:textColor="@color/colorOpposite"
						android:id="@+id/bytes_in"
                        android:textSize="10.0dip"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="15.0dip"
						android:textAlignment="center"
                        android:gravity="center"
                        android:text="0 B"
                        android:layout_centerVertical="true"
						app:drawableTint="?android:colorPrimary"
						app:drawableTopCompat="@drawable/de"/>
                

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center_horizontal">

                
                	<com.google.android.material.textview.MaterialTextView
						android:textColor="@color/colorOpposite"
						android:id="@+id/bytes_out"
                        android:gravity="center"
                        android:textSize="11.0dip"
                        android:text="0 B"
                        android:layout_marginTop="15.0dip"
                        android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAlignment="center"
						app:drawableTint="?android:colorPrimary"
						app:drawableTopCompat="@drawable/dg"/>
						

		</RelativeLayout>

	</LinearLayout>
				 
                          <Button
                            android:id="@+id/activity_starterButtonMain"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:textSize="11.0dip"
                            android:layout_marginLeft="10.0dip"
				        	android:layout_marginRight="10.0dip"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10.0dip"
                            android:layout_width="match_parent"
                            android:letterSpacing="0.1"
                            android:text="start"
                            android:textColor="@color/white"/>


				
                
                	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingStart="5.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
		android:layout_marginRight="5.0dip"
		android:gravity="center">
        
        
        <LinearLayout
					android:gravity="center"
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp">
                    
					<ImageView
						android:layout_width="35.0dip"
						android:layout_height="35.0dip"
						android:src="@drawable/ic_clock"/>
					<LinearLayout
						android:orientation="vertical"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="4.0dip"
						android:layout_weight="1.0"
						android:layout_gravity="center">
						<TextView
							android:textSize="11.0dip"
							android:id="@+id/timer"
                            android:textColor="@color/colorOpposite"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Time Credit:"/>
                            
						<TextView
							android:textSize="15.0dip"
							android:id="@+id/timerTextView"
							android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorOpposite"
							android:layout_height="wrap_content"
							android:text="00:24:12:00"/>
					
					</LinearLayout>
					
                        
                   <Button
					android:textSize="11.0dip"
					android:textColor="#ffffff"
					android:id="@+id/btnAddTime"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="ADD Time"/>
				</LinearLayout>
	

	</LinearLayout>


			</LinearLayout>

		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:gravity="center"
			android:orientation="vertical"
			android:padding="5.0dip"
			android:visibility="gone"
			android:layout_width="200.0dip"
			android:layout_height="wrap_content">

			<TextView
				android:textAppearance="?android:textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Disconnected"/>
                
                <TextView
				android:textAppearance="?android:textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Disconnected"/>

		</LinearLayout>

		<com.google.android.gms.ads.AdView
			xmlns:ads="http://schemas.android.com/apk/res-auto"
			android:layout_gravity="bottom"
			android:id="@+id/adBannerMainView"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="0.0dip"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			ads:adSize="BANNER"
			ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>

	</LinearLayout>
    </androidx.core.widget.NestedScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>
