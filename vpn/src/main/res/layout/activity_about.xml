<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	>

		<LinearLayout
			android:orientation="vertical"
			android:padding="2.0dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
            
            	<androidx.cardview.widget.CardView
				android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5.0dip"
                app:cardElevation="2.0dip"
                app:cardUseCompatPadding="true">
            
            
            <RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="140dp"
			android:id="@+id/hmRelativeLayout1"
			android:gravity="center"
			android:layout_marginTop="0dp"
			android:layout_margin="5dp">

			<RelativeLayout
				android:id="@+id/easyFlipView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center">

				<RelativeLayout
					android:layout_height="140dp"
					android:layout_width="match_parent"
					android:paddingLeft="5dp"
					android:id="@+id/graph_l">

					<com.github.Graph.DataTransferGraph2
						android:id="@+id/imgBackCard"
						android:layout_width="match_parent"
						android:layout_height="140dp"
						android:visibility="gone"/>

					<com.github.mikephil.charting.charts.LineChart
						android:id="@+id/chart1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginBottom="0dp"/>

				</RelativeLayout>

				<RelativeLayout
					android:gravity="center"
					android:src="@drawable/ic_launcher"
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:id="@+id/image_l">

				</RelativeLayout>

			</RelativeLayout>

		</RelativeLayout>
        </androidx.cardview.widget.CardView>
            
            	<androidx.cardview.widget.CardView
				android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5.0dip"
                app:cardElevation="2.0dip"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="10.0dip"
                    android:paddingBottom="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold"
                        android:textColor="@color/colorOpposite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dip"
                        android:textSize="11.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:text="Status :"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="?selectableItemBackground"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:minHeight="50.0dip">
                        <View
                            android:layout_width="20.0dip"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"
                            android:tint="#20B2AA"
                            android:src="@drawable/ic_configurer"/>
                        <View
                            android:layout_width="20.0dip"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:textSize="12.0dip"
                                android:textColor="@color/colorOpposite"
                                android:layout_height="wrap_content"
                                android:text="Status :"/>
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:id="@+id/connect_status"
                                android:textColor="@color/colorOpposite"
                                android:textSize="11.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Disconnected"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="?selectableItemBackground"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:minHeight="50.0dip">
                        <View
                            android:layout_width="20.0dip"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"
                            android:tint="#20B2AA"
                            android:src="@drawable/cmd_earth"/>
                        <View
                            android:layout_width="20.0dip"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12.0dip"
                                android:textColor="@color/colorOpposite"
                                android:text="Config Version :"/>
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:id="@+id/config_version_txt"
                                android:layout_width="wrap_content"
                                android:textSize="11.0dip"
                                android:textColor="@color/colorOpposite"
                                android:layout_height="wrap_content"
                                android:text="Gcash: 09203610808"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
			</androidx.cardview.widget.CardView>
			<androidx.cardview.widget.CardView
				android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5.0dip"
                app:cardElevation="2.0dip"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="10.0dip"
                    android:paddingBottom="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold"
                        android:textColor="@color/colorOpposite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:textSize="11.0dip"
                        android:text="About :"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="?selectableItemBackground"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:minHeight="50.0dip">
                        <View
                            android:layout_width="20.0dip"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"
                            android:tint="#20B2AA"
                            android:src="@drawable/ic_person"/>
                        <View
                            android:layout_width="20.0dip"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12.0dip"
                                android:textColor="@color/colorOpposite"
                                android:text="Angelo Lacaba"/>
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:autoLink="web"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11.0dip"
                                android:textColor="@color/colorOpposite"
                                android:text="Modified Maintainer"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="?selectableItemBackground"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:minHeight="50.0dip">
                        <View
                            android:layout_width="20.0dip"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"
                            android:tint="#20B2AA"
                            android:src="@drawable/cf"/>
                        <View
                            android:layout_width="20.0dip"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:textSize="12.0dip"
                                android:textColor="@color/colorOpposite"
                                android:layout_height="wrap_content"
                                android:text="Send Some Love"/>
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:autoLink="web"
                                android:textSize="11.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorOpposite"
                                android:text="Gcash: 09203610808"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
</LinearLayout>

